{layout '../@layout.latte'}
{block content}
	<div class="container">
		<br>
		<div class="row col-lg-12">
			<div class="col-lg-9">
				<h4>{$dream->getTitle()}</h4>
			</div>
			<div class="col-lg-3 text-center">
				{$dream->getFormattedDate()}
			</div>
		</div>
		<hr>
		<div class="row col-lg-12">
			<p>{$dream->getDescription()|breaklines}</p>
		</div>
		<hr>
		<div class="row col-lg-12">
			{$dreamTypesElement->render()|noescape}
		</div>
	</div>
{/block}