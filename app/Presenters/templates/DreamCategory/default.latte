{layout '../@layout.latte'}
{block content}
	<div class="container">
		<br>
		<div class="row content-list-head">
			<div class="col-auto">
				<h3>Categories</h3>
			</div>
		</div>
		<hr>
		<ol class="list-group list-group-activity">
			{foreach $categories as $category}
				<li class="list-group-item">
					<a href="/dreamcategory/show/{$category->getId()}">{$category->getName()}</a>
				</li>
			{/foreach}
		</ol>
	</div>
{/block}